<%= simple_form_for @content, url: path do |form| %>
  <div class="mt-3">
    <%= form.input :body, as: :text, input_html: { class: "w-full", rows: 5 }, hint: "To put the link in the message body, use {{link}}" %>
  </div>

  <div class="mt-3">
    <%= form.input :age_in_months, wrapper_html: { class: "w-1/2" } %>
  </div>

  <div class="mt-3">
    <%= form.input :link, input_html: { class: "w-full" } %>
  </div>

  <%= form.submit (action_name == "edit" ? "Update" : "Create"), class: "btn btn-primary mt-5 bg-bbc-blue text-white w-full" %>
<% end %>
