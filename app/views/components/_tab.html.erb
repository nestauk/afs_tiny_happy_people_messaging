<%# locals: (href:, label:) %>
<% if current_page? href %>
  <div class="
    py-2 -mb-px border-b-4 text-base sm:text-lg font-semibold select-none
    text-indigo-600 border-indigo-600
  ">
    <%= label %>
  </div>
<% else %>
  <a
    href="<%= href %>"
    class="
      py-2 -mb-px border-b-4 text-base sm:text-lg font-semibold
      border-transparent
      hover:text-indigo-600
      active:text-indigo-700 active:border-indigo-700
    "
    data-turbo-frame="_self"
  >
    <%= label %>
  </a>
<% end %>
