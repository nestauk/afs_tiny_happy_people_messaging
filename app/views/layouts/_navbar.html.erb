<nav class="py-1 bg-bbc-dark-blue text-white sticky" role="navigation">
  <a href="#main" class="absolute top-auto w-1 h-1 overflow-hidden focus:static focus:w-auto focus:h-auto text-white text-lg">Skip to main content</a>
  <div class="md:px-24 px-3 flex items-center w-full justify-between">
    <%= link_to root_url, class: "md:w-1/2 w-full flex items-center", "aria-label": "BBC logo" do %>
      <%= vite_image_tag "images/horizontal-logo.png", alt: "BBC logo", class: "h-12 md:h-14" %>
    <% end %>
    <div class="hidden md:block xl:w-1/6 w-1/3">
      <% if current_admin %>
        <div class="flex justify-between">
          <%= link_to "Dashboard", dashboard_admin_users_path, class: 'text-lg' %> |
          
          <div x-data="groupManager()">
            <%= form_with url: destroy_admin_session_path, method: :delete, html: { "x-ref": "logoutForm" } do %>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <%= hidden_field_tag :_method, :delete %>
            <% end %>
            <button @click="logOut()" class="text-lg">
              Sign out
            </button>
          </div>
        </div>
      <% end %>
    </div>
      <% if params[:locale] == "en" || params[:locale].nil? %>
        <%= link_to "Cymraeg", root_path(locale: 'cy') %>
      <% else %>
        <%= link_to "English", root_path(locale: 'en') %>
      <% end %>
  </div>
</nav>
    