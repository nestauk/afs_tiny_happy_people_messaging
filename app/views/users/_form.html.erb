<div class="md:mt-8 w-full">
  <%= simple_form_for @user do |form| %>
    <div class="mt-3">
      <%= form.input :first_name%>
    </div>

    <div class="mt-3">
      <%= form.input :last_name %>
    </div>

    <div class="mt-3">
      <%= form.input :phone_number %>
    </div>

    <div class="mt-3">
      <%= form.input :postcode, wrapper_html: { class: "w-1/2" } %>
    </div>

    <div class="mt-3">
      <%= 
        form.input :child_birthday,
        label: "Your child's birthday",
        hint: "We need to know your child's birthday to send you activities that are suitable for their age.",
        as: :date,
        order: [:month, :year],
        wrapper_html: { class: "" },
        input_html: { class: "md:w-1/2 mt-3 flex" } 
      %>
    </div>

    <div class="mt-3">
      <%= form.input :timing, label: "What time of day would you like to receive the texts?", as: :select, collection: [["Morning", "morning"], ["Afternoon", "afternoon"], ["Evening", "evening"], ["No preference", "no_preference"]], wrapper_html: { class: "flex flex-col" }, input_html: { class: "md:w-1/3 mt-3" } %>
    </div>

    <div class="mt-3">
      <%= form.input :family_support, label: "Do you have family support in bringing up your child(ren)?", input_html: { class: "form-checkbox" } %>
    </div>

    <div class="mt-3">
      <%= form.input :community_sign_up, label: "Would you like to be added to a Slack channel with other parents to discuss the programme?", input_html: { class: "form-checkbox" } %>
    </div>

    <%= form.input :terms_agreed_at, as: :boolean, label: false, inline_label: "I accept the #{link_to("terms of service", terms_path, class: "underline hover:no-underline", target: "_blank")} and #{link_to("privacy policy", privacy_policy_path, class: "underline hover:no-underline", target: "_blank")}".html_safe, input_html: { class: "form-checkbox" }, wrapper_html: { class: "mt-5" }  %>

    <%= form.submit "Sign up", class: "btn btn-primary mt-2 bg-purple-600 text-white w-full" %>
  <% end %>
</div>
