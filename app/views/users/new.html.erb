<div class="flex items-center pt-24 px-28 bg-zinc-50">  
  <div class="w-2/3">    
    <h1 class="text-purple-900 md:text-6xl">
      Be first in line for our free happiness-boosting activities
    </h1>
    <h2 class="text-xl md:text-4xl text-zinc-600">
      Join our waitlist for early access
    </h2>
    <div class="md:mt-8">
      <%= simple_form_for @user do |form| %>
        <div class="md:w-1/3 mt-3">
          <%= form.input :first_name%>
        </div>

        <div class="md:w-1/3 mt-3">
          <%= form.input :last_name %>
        </div>

        <div class="md:w-1/3 mt-3">
          <%= form.input :phone_number %>
        </div>

        <div class="w-1/3 mt-3">
          <%= form.input :child_age, label: "Your child's age in months" %>
        </div>

        <%= form.input :interest_ids, as: :hidden, input_html: { value: params["interest_ids"] } %>

        <%= form.submit "Sign Up", class: "btn btn-primary mt-5 bg-purple-600 text-white" %>
      <% end %>
    </div>
  </div>
  <div class="w-1/3 hidden md:block">
    <%= image_tag "phone", width: "500px", height: "300px" %>
  </div>
</div>
