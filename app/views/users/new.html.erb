<div class="relative overflow-hidden">
  <div class="absolute left-0 top-0 w-full h-full hidden md:block hero-banner">
  </div>
  <div class="bg-bbc-dark-blue md:bg-transparent md:flex md:flex-col p-5 relative md:px-24 md:justify-around h-85svh">
    <div class="md:w-4/5 xl:w-3/5 md:bg-bbc-dark-blue md:p-6 xl:p-8 flex flex-col justify-between h-fit">
      <h1 class="text-3xl lg:text-4xl xl:text-5xl text-bbc-yellow">
        <%= t('home_page.title') %>
      </h1>
      <h2 class="text-xl lg:text-3xl text-pink-200 md:w-5/6">
        <%= t('home_page.subtitle') %>
      </h2>
      <%= link_to t('home_page.sign_up'), "#sign-up-form", class: "btn bg-white float-end md:w-1/3 mt-6 font-bold" %>
    </div>
  </div>
</div>
<div class="block md:hidden">
  <%= vite_image_tag "images/children-playing.jpg", alt: "", "aria-hidden": "true" %>
</div>

<div class="px-3 py-8 md:py-24 items-center">
  <div class="flex justify-around">
    <h2 class="text-3xl md:text-5xl md:mb-20 mb-8 text-center font-bold">
      <%= t('home_page.how_it_works') %>
    </h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 justify-center gap-10 xl:px-20">
    <div class="flex flex-col items-center gap-5 bg-bbc-orange-50 border-bbc-orange border-2 p-10 rounded object-fill">
      <div class="w-24 h-24 md:w-40 md:h-40 flex items-center justify-around">
        <div>
          <%= vite_image_tag "images/noun-mobile.png", alt: "", "aria-hidden": "true" %>
        </div>
      </div>
      <div>
        <p class="text-lg md:text-3xl text-center w-64 font-bold mb-1 md:mb-3">
          1. <%= t('home_page.step_1_title') %>
        </p>
        <p class="md:text-xl text-center w-64">
          <%= t('home_page.step_1_text') %>
        </p>
      </div>
    </div>
    <div class="flex flex-col items-center gap-5 bg-bbc-pink-50 p-10 border-bbc-pink border-2 rounded">
      <div>
        <div class="w-24 h-24 md:w-40 md:h-40 flex items-center justify-around">
          <div>
            <%= vite_image_tag "images/noun-sms.png", alt: "", "aria-hidden": "true" %>
          </div>
        </div>
      </div> 
      <div>
        <p class="text-lg md:text-3xl text-center w-64 font-bold mb-1 md:mb-3">
          2. <%= t('home_page.step_2_title') %>
        </p>
        <p class="md:text-xl text-center w-64">
          <%= t('home_page.step_2_text') %>
        </p>
      </div>
    </div>
    <div class="flex flex-col items-center gap-5 bg-bbc-purple-50 p-10 border-bbc-purple border-2 rounded">
      <div class="w-24 h-24 md:w-40 md:h-40 flex items-center justify-around">
        <div>
          <%= vite_image_tag "images/noun-child.png", alt: "", "aria-hidden": "true" %>
        </div>
      </div>
      <div>
        <p class="text-lg md:text-3xl text-center w-64 font-bold mb-1 md:mb-3">
          3. <%= t('home_page.step_3_title') %>
        </p>
        <p class="md:text-xl text-center w-64">
          <%= t('home_page.step_3_text') %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="items-center bg-bbc-yellow-50 w-full">
  <div class="md:flex md:justify-around px-5 md:px-20">
    <h2 class="text-3xl md:text-5xl md:mb-20 mb-8 pt-8 md:text-center font-bold">
      <%= t('home_page.why_sign_up') %>
    </h2>
  </div>
  <div class="flex flex-col lg:flex-row flex-wrap">
    <div class="w-full xl:w-1/2 px-5 md:px-20">
      <% (1..5).each do |i| %>
        <div class=<%= i == 1 ? "pb-5" : "py-5" %>>
          <h3 class="font-bold md:text-2xl text-lg"><%= t("home_page.reason_#{i}_title") %></h3>
          <p class="mt-1">
            <%= t("home_page.reason_#{i}_text") %>
          </p>
        </div>
        <% unless i == 5 %>
          <hr class="border border-purple-900">
        <% end %>
      <% end %>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 xl:grid-cols-1 w-full xl:w-1/2 xl:relative">
      <%= vite_image_tag "images/frisbee.jpg", alt: "", "aria-hidden": "true", class: "lg:col-span-2 xl:col-span-1" %>
      <div class="bg-bbc-yellow text-black p-8 col-span-1 lg:col-start-3 xl:col-start-1 flex flex-col justify-around xl:absolute xl:bottom-0 xl:w-2/3 xl:right-0">
        <div>
          <p class="text-lg md:text-xl font-bold">
            <%= t("home_page.quote") %>
          </p>
          <p class="text-lg md:text-xl mt-2">
            - <%= t("home_page.quote_author") %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div> 

<div class="flex justify-around md:py-10" id="sign-up-form">
  <div class="py-8 px-8 md:py-14 lg:w-1/2 w-full">
    <h2 class="text-3xl md:text-5xl font-bold">
      <%= t("home_page.sign_up") %>
    </h2>
    <% if ENV.fetch("SIGN_UP_OPEN", "true") == "true" %>
      <p>
        <%= t("home_page.free") %>
      </p>
      <%= render "form" %>
    <% else %>
      <p class="mb-2">
        We're currently closed for new sign-ups.
      </p>

      <p>
        Visit <a href="https://www.bbc.co.uk/tiny-happy-people/activities" class="link">CBeebies Parenting</a> for activity inspiration.
      </p>
    <% end %>
  </div>
</div>
