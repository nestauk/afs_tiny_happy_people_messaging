<%= simple_form_for @group do |form| %>
  <div class="mt-3">
    <%= form.input :name %>
  </div>

  <div class="mt-3">
    <%= form.input :age_in_months %>
  </div>

  <div class="mt-3">
    <%= form.input :experiment_name, collection: FieldTest::Experiment.all.map(&:id), hint: 'Optional' %>
  </div>

  <%= form.submit (action_name == "edit" ? "Update" : "Create"), class: "btn btn-primary mt-5 bg-purple-600 text-white w-full" %>
<% end %>
