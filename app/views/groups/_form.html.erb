<%= simple_form_for @group do |form| %>
  <div class="mt-3">
    <%= form.input :name %>
  </div>

  <div class="mt-3">
    <%= form.input :language, as: :select, collection: [['English', 'en'], ['Welsh', 'cy']] %>
  </div>

  <%= form.submit (action_name == "edit" ? "Update" : "Create"), class: "btn btn-primary mt-5 bg-purple-600 text-white w-full" %>
<% end %>
