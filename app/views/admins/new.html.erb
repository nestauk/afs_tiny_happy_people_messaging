<div class="flex justify-around">
  <div class="w-1/2">
    <div class="mb-2">
      <%= link_to '< Back', admins_path, class: 'underline hover:no-underline' %>
    </div>
    <h1 class="text-3xl font-bold">Create admin</h1>
    <%= simple_form_for @admin do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Create admin", class: "btn bg-purple-600 text-white mt-5" %>
    <% end %>
  </div>
</div>
