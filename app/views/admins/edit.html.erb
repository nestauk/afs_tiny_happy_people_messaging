<div class="flex justify-around">
  <div class="w-1/2">
    <div class="mb-2">
      <%= link_to '< Back', admins_path, class: 'underline hover:no-underline' %>
    </div>
    <h1 class="text-3xl font-bold">Edit admin</h1>
    <%= simple_form_for @admin do |f| %>
      <div class="mt-3">
        <%= f.input :email, input_html: { class: "flex flex-col w-3/4" } %>
      </div>
      <%= f.submit "Update", class: "btn bg-purple-600 text-white mt-5" %>
    <% end %>
  </div>
</div>
