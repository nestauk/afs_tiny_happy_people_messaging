<div class="mx-auto max-w-prose">
  <%= simple_form_for @demographic_data, url: user_demographic_data_path do |f| %>
    <div class="bg-purple-900 p-5 md:p-10 mx-2">
      <h1 class="text-4xl text-yellow-200">
        You're almost done
      </h1>

      <h2 class="font-normal text-lg text-white">
        Tell us more about you and your family
      </h2>

      <p class="font-normal text-white mb-3">
        You can skip any questions you don't want to answer by leaving them blank.
      </p>

      <%= f.submit "Skip this section", class: 'link text-white' %>
    </div>

    <div class="mt-8 w-full px-4">
      <div class="flex gap-2">
        <%= f.input :gender, label: "What is your gender?", required: false, wrapper_html: { class: "w-1/2" } %>
        <%= f.input :age, label: "What is your age?", required: false, wrapper_html: { class: "w-1/2" } %>
      </div>

      <%= f.input :number_of_children, label: "How many children do you have?", required: false, wrapper_html: { class: "mt-5" } %>
      <%= f.input :children_ages, label: "How old are you children?", required: false, wrapper_html: { class: "mt-5" }  %>
      <%= f.input :country, label: "Where do you live?", required: false, as: :select, include_blank: true, collection: ["England", "Scotland", "Wales", "Northern Ireland"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :ethnicity, label: "What is your ethnicity?", required: false, as: :select, include_blank: true, collection: ["Asian, Asian British", "Black, Black British, Black Caribbean or Black African", "Mixed or multiple ethnic groups", "White", "Other ethnic group (Arab, any other ethnic group)"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :education, label: "What is your highest level of education?", required: false, as: :select, include_blank: true, collection: ["Up to 4 GCSE's (Including 1-4 O Levels/CSE/GCSEs (any grades), Foundation Diploma, NVQ level 1, Foundation GNVQ or equivalents) (or foreign equivalent)", "5-7 GCSE's (or O Levels/CSE/GCSEs (any grades), Foundation Diploma, NVQ level 1, Foundation GNVQ or equivalents) (or foreign equivalent)", "2 or more A-levels (Including 2+ A Levels, 4+ AS Levels, NVQ Level 3, Advanced GNVQ, City and Guilds Advanced Craft, ONC, OND, BTEC National, RSA Advanced Diploma or equivalents) (or foreign equivalent)", "Bachelor's degree (Including BA, BSc, NVQ Level 4-5, HNC, HND, RSA Higher Diploma, BTEC Higher level or equivalents) (or foreign equivalent)", "Post-Graduate degree or qualification (Including Higher Degrees e.g. MA, PhD, PGCE, Professional qualifications e.g. teaching, nursing, accountancy or equivalents) (or foreign equivalent)"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :marital_status, label: "Which of the following best describes your marital status?", required: false, as: :select, include_blank: true, collection: ["Married", "Single", "Divorced", "Co-habitating", "Widowed/Widower"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :employment_status, label: "What is your employment status?", required: false, as: :select, include_blank: true, collection: ["Unemployed", "Part time employed", "Full time employed", "Homemaker", "Self-employed"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :household_income, label: "What is your total household income before taxes?", required: false, as: :select, include_blank: true, collection: ["Less than £9,999", "£10,000 - £19,999", "£20,000 - £29,000", "£32,000 +"], input_html: { class: "w-full" }, wrapper_html: { class: "mt-5" } %>
      <%= f.input :receiving_credit, label: "Do you receive one of the following: universal credit or tax credit, or if you live in England, free school meals for one or more of your children?", required: false, as: :radio_buttons, collection: [["Yes", true], ["No", false]], wrapper_html: { class: "mt-5" }, item_wrapper_tag: :div %>
      <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>

      <%= f.submit "Submit", class: 'btn bg-purple-600 text-white w-full mt-5' %>
    </div>
  <% end %>
</div>
