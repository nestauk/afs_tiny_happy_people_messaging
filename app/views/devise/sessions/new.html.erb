<div class="flex justify-around">
  <div class="w-1/3">
    <h1 class="text-3xl font-bold">Log in</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs w-full">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "flex flex-col" },
                      wrapper_html: { class: "flex flex-col mb-4" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password"},
                      wrapper_html: { class: "flex flex-col" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary mt-5 bg-purple-600 text-white mb-5" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
