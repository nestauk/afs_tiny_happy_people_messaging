<div class="md:flex items-center">
  <div class="md:w-2/3">
    <h1 class="md:text-6xl text-purple-900">
      Fun, free language-boosting activities to try with your child
    </h1>
    <h2 class="text-xl md:text-4xl text-zinc-600">
      Get bite-sized activities delivered to your phone, every week
    </h2>

    <%= simple_form_for @interest do |form| %>
      <h3 class="mb-2 md:mt-6 text-xl">
        What brings you here today?
      </h3>
      <%= form.input :title, as: :check_boxes, label: false, collection: Interest::TITLES, wrapper_html: { class: "flex flex-col gap-4 mt-5" } %>

      <%= form.input :other_title, label: "Something else?", required: false, wrapper_html: { class: "w-1/2 mt-3" } %>

      <%= form.submit "Save", class: "btn btn-primary mt-4 bg-purple-600 text-white" %>
    <% end %>
  </div>
  <div class="w-1/3 hidden md:block">
    <%= image_tag "phone", width: "500px", height: "300px" %>
  </div>
</div>
