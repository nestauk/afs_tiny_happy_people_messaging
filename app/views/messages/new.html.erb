<div class="flex justify-around">
  <div class="w-1/2">
    <div class="mb-2">
      <%= link_to '< Back', user_path(@user.uuid), class: 'underline hover:no-underline' %>
    </div>
    <h1 class="text-3xl font-bold">Send a message to <%= @user.first_name %></h1>
    <%= simple_form_for [@user, @message] do |f| %>
      <div class="flex flex-col">
          <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
          <%= f.input :body, as: :text, input_html: { class: "w-full", rows: 5 }  %>
          <%= f.submit "Send message", class: "btn bg-purple-600 text-white mt-5" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
