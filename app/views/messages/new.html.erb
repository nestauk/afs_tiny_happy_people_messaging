<div class="p-28 bg-zinc-50">
  <h1 class="text-3xl font-bold">Send a message to <%= @user.first_name %></h1>
  <%= form_for [@user, @message] do |f| %>
    <div class="flex flex-col">
        <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.text_area :body, class: "w-1/2" %>
        <%= f.submit "Send message", class: "btn bg-purple-600 text-white w-1/2 mt-5" %>
      </div>
    </div>
  <% end %>
</div>
